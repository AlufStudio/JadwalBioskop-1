<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    >

    <RelativeLayout

        android:id="@+id/itemContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivItemCover"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:srcCompat="@drawable/icon"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imageView8"
            android:layout_toRightOf="@+id/ivItemCover">

            <TextView
                android:id="@+id/tvItemJudul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Evaluasi Biologis Sistem Pangan"
                android:textColor="#1c1b34"
                android:textSize="16sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_panah"
            android:id="@+id/imageView8"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearItemGaris"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="#f6f6f6"
        android:orientation="vertical"></LinearLayout>

</LinearLayout>